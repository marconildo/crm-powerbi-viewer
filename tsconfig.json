{
    "include": [
        "./src/**/*.ts"
    ],
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "es2015",
        "module": "es2015",
        "lib": [
            "es5",
            "dom",
            "es2015.symbol",
            "es2015.promise"
        ],
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    }
}